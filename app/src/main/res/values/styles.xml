<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="AppTheme.Button">
        android:text="Button"
        android:textColor="#06470A"
        android:textSize="30sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#279400"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"app
    </style>

    <style name="PrimaryButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
    </style>

    <style name="OtherTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColorBlue</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorBlue</item>
        <item name="colorAccent">@color/secondaryColorBlue</item>
    </style>

    <style name="AppTheme2" parent="android:Theme.Material">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
